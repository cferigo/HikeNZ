<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="20dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    app:cardBackgroundColor="#ebebeb"
    app:cardElevation="4dp"
    android:alpha="0.8">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <TextView
            android:id="@+id/title_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:text="title"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:maxLines="1"/>



            <LinearLayout
                android:layout_toLeftOf="@+id/div_1"
                android:layout_below="@+id/title_textView"
                android:layout_width="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/ic_time"
                    android:layout_width="match_parent"
                    android:layout_height="31dp"
                    android:drawableTop="@drawable/ic_time" />

            <TextView
                android:id="@+id/card_time_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ic_time"
                android:text="something "
                android:textSize="16sp"/>
            </LinearLayout>

            <View
                android:id="@+id/div_1"
                android:layout_width="2dp"
                android:layout_height="50dp"
                android:background="#b0b0b0"
                android:layout_toLeftOf="@+id/id_1"
                android:layout_below="@+id/title_textView"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"/>

            <LinearLayout
                android:id="@+id/id_1"
                android:layout_below="@+id/title_textView"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/ic_distance"
                    android:layout_width="match_parent"
                    android:layout_height="31dp"
                    android:drawableTop="@drawable/ic_distance" />

                <TextView
                    android:id="@+id/card_distance_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ic_time"
                    android:text="something"
                    android:textSize="16sp"/>
            </LinearLayout>

            <View
                android:id="@+id/div_2"
                android:layout_width="2dp"
                android:layout_height="50dp"
                android:background="#b0b0b0"
                android:layout_toRightOf="@+id/id_1"
                android:layout_below="@+id/title_textView"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"/>

            <LinearLayout
                android:layout_toRightOf="@+id/div_2"
                android:layout_below="@+id/title_textView"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/ic_difficulty"
                    android:layout_width="match_parent"
                    android:layout_height="31dp"
                    android:drawableTop="@drawable/ic_difficulty" />

                <TextView
                    android:id="@+id/card_difficulty_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ic_time"
                    android:text="something"
                    android:textSize="16sp"/>
            </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>