<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".RegisterActivity">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<TextView
    android:id="@+id/register_Header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:gravity="center"
    android:text="Hike NZ"
    android:fontFamily="@font/main_bold"
    android:textSize="60sp"
    android:textStyle="bold"
    android:textColor="#048b12"/>

    <TextView
        android:id="@+id/register_SubHeader"
        android:layout_below="@+id/register_Header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Create New Account"
        android:textSize="16sp"
        android:textColor="#000000"/>

    <EditText
        android:id="@+id/firstName_TextField"
        android:layout_below="@+id/register_SubHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="70dp"
        android:background="@drawable/round_background"
        android:padding="10dp"
        android:gravity="center"
        android:textColorHint="#112710"
        android:layout_marginLeft="70dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:hint="First Name"
        android:inputType="text" />

    <EditText
        android:id="@+id/lastName_TextField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/firstName_TextField"
        android:layout_centerHorizontal="true"
        android:background="@drawable/round_background"
        android:padding="10dp"
        android:gravity="center"
        android:textColorHint="#112710"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="70dp"
        android:hint="Last Name"
        android:inputType="text" />

    <EditText
        android:id="@+id/email_TextField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lastName_TextField"
        android:layout_centerHorizontal="true"
        android:background="@drawable/round_background"
        android:padding="10dp"
        android:gravity="center"
        android:textColorHint="#112710"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="70dp"
        android:hint="Email"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/password_TextField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email_TextField"
        android:layout_centerHorizontal="true"
        android:background="@drawable/round_background"
        android:padding="10dp"
        android:gravity="center"
        android:textColorHint="#112710"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="70dp"
        android:hint="Password"
        android:inputType="textPassword"/>

    <EditText
        android:id="@+id/confirmPassword_TextField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password_TextField"
        android:layout_centerHorizontal="true"
        android:background="@drawable/round_background"
        android:padding="10dp"
        android:gravity="center"
        android:textColorHint="#112710"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="70dp"
        android:hint="Confirm Password"
        android:inputType="textPassword"/>

    <CheckBox
        android:id="@+id/register_checkBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:background="@drawable/round_background"
        android:padding="10dp"
        android:gravity="center"
        android:textColor="#112710"
        android:layout_marginTop="20dp"
        android:layout_marginRight="70dp"
        android:text="Accept Privacy Policy"
        android:textSize="16sp"
        android:layout_below="@+id/confirmPassword_TextField"/>

    <Button
        android:id="@+id/register_Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_checkBox"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/round_button"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:onClick="register"
        android:text="Register"
        android:textColor="#ffffff"/>

    <TextView
        android:id="@+id/back_Link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_Button"
        android:layout_alignParentRight="true"
        android:layout_marginRight="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:onClick="loginLink"
        android:text="Back to login"
        android:textSize="16sp"
        android:textColor="#bac8e0"/>
    </RelativeLayout>
</ScrollView>
</RelativeLayout>