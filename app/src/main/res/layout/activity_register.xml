<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".RegisterActivity">

<TextView
    android:id="@+id/register_Header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:text="Hike NZ"
    android:textSize="60sp"
    android:textStyle="bold"
    android:textColor="#000000"/>

    <TextView
        android:id="@+id/register_SubHeader"
        android:layout_below="@+id/register_Header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Create New Account"
        android:textSize="16sp"
        android:textColor="#000000"/>

    <EditText
        android:id="@+id/firstName_TextField"
        android:layout_below="@+id/register_SubHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="70dp"
        android:layout_marginLeft="70dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:hint="First Name"
        android:inputType="text"
        android:textColorHint="#000000"/>

    <EditText
        android:id="@+id/lastName_TextField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/firstName_TextField"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="70dp"
        android:hint="Last Name"
        android:inputType="text"
        android:textColorHint="#000000"/>

    <EditText
        android:id="@+id/email_TextField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lastName_TextField"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="70dp"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textColorHint="#000000"/>

    <EditText
        android:id="@+id/password_TextField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email_TextField"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="70dp"
        android:hint="Password"
        android:textColorHint="#000000"
        android:inputType="textPassword"/>

    <EditText
        android:id="@+id/confirmPassword_TextField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password_TextField"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="70dp"
        android:hint="Confirm Password"
        android:textColorHint="#000000"
        android:inputType="textPassword"/>

    <Button
        android:id="@+id/register_Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/confirmPassword_TextField"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/round_button"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:onClick="register"
        android:text="Register"
        android:textColor="#ffffff"/>

    <TextView
        android:id="@+id/back_Link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_Button"
        android:layout_alignParentRight="true"
        android:layout_marginRight="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:onClick="loginLink"
        android:text="Back to login"
        android:textSize="16sp"
        android:textColor="@android:color/holo_blue_dark"/>

</RelativeLayout>