<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".RegisterActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/addTrack_Header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Hike NZ"
        android:textSize="60sp"
        android:textStyle="bold"
        android:textColor="#048b12"
        android:fontFamily="@font/main_bold"
        />

    <TextView
        android:id="@+id/addTrack_subHeader"
        android:layout_below="@+id/addTrack_Header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Create New Track"
        android:textSize="16sp"
        />

    <EditText
        android:id="@+id/addTrack_Name_TextField"
        android:layout_below="@+id/addTrack_subHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="70dp"
        android:layout_marginLeft="70dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:hint="Track Name"
        android:inputType="text"
        android:background="@drawable/round_background"
        android:padding="8dp"
        android:gravity="center"/>

    <EditText
        android:id="@+id/addTrack_Description_TextField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addTrack_Name_TextField"
        android:layout_centerHorizontal="true"
        android:inputType="textCapSentences|textMultiLine"
        android:maxLines ="5"
        android:maxLength ="2000"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="70dp"
        android:hint="track Description"
        android:background="@drawable/round_background"
        android:padding="8dp"
        android:gravity="center"/>

    <EditText
        android:id="@+id/addTrack_difficulty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addTrack_Description_TextField"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="70dp"
        android:hint="Difficulty"
        android:inputType="textEmailAddress"
        android:background="@drawable/round_background"
        android:padding="8dp"
        android:gravity="center"/>

    <EditText
        android:id="@+id/addTrack_Distance_TextField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addTrack_difficulty"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="70dp"
        android:hint="Distance"
        android:background="@drawable/round_background"
        android:padding="8dp"
        android:gravity="center"
        android:inputType="numberDecimal"/>

    <EditText
        android:id="@+id/addTrack_Time_TextField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addTrack_Distance_TextField"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="70dp"
        android:hint="Time To Complete"
        android:background="@drawable/round_background"
        android:padding="8dp"
        android:gravity="center"
        android:inputType="numberDecimal"/>

    <CheckBox
        android:id="@+id/addTrack_Dog_checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="70dp"
        android:text="Dog Friendly"
        android:textColor="#ffffff"
        android:layout_below="@+id/addTrack_Time_TextField"
        android:buttonTint="#ffffff"/>

    <EditText
        android:id="@+id/addTrack_Latitude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addTrack_Dog_checkBox"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="70dp"
        android:hint="Latitude"
        android:background="@drawable/round_background"
        android:padding="8dp"
        android:gravity="center" />

    <EditText
        android:id="@+id/addTrack_Longitude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addTrack_Latitude"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="70dp"
        android:hint="Longitude"
        android:background="@drawable/round_background"
        android:padding="8dp"
        android:gravity="center" />

    <Button
        android:id="@+id/addTrack_createTrack_Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addTrack_Longitude"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/round_button"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:text="Create"
        android:textColor="#ffffff"/>

    <Button
        android:id="@+id/addTrack_back_Link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addTrack_createTrack_Button"
        android:layout_alignParentRight="true"
        android:layout_marginRight="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="Back"
        android:textSize="16sp"
        android:textColor="@android:color/holo_blue_dark"/>
</RelativeLayout>
    </ScrollView>
</RelativeLayout>